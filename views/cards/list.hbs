<div class="container">
  <h1>Cards list</h1>

  <div class="row row row-cols-1 row-cols-sm-2 row-cols-md-3 g-5 my-5">
    {{! image name status }}
    {{#each cards.data}}
      <div class="col">
        <div class="card shadow-sm">
          <img src="{{images.small}}" alt="" />
          <p>{{name}}</p>
          <p>{{status}}</p>
          <form action="/add-favorite" method="POST">
             <input type="hidden" name="apiId" value="{{id}}"/> 
            
            <input type="hidden" name="images" value="{{images.small}}" />


            <button type="submit" Id="add">Add</button>
          </form>
        </div>
      </div>
    {{/each}}
  </div>
</div>